<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--fresco圆角公用公共属性(圆角图片)-->
    <style name="simpleDDraweeViewStyle">
        <item name="roundBottomRight">true</item>
        <item name="roundTopLeft">true</item>
        <item name="roundTopRight">true</item>
        <item name="roundedCornerRadius">8px</item>
        <item name="actualImageScaleType">centerCrop</item>
    </style>


    <style name="loginEditTextline" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/col_eef1f1</item>
        <item name="colorControlActivated">@color/col_eef1f1</item>
    </style>
    <!--toolbar公共属性-->
    <style name="toolBarTitleBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100px</item>
    </style>

</resources>
